# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                         controllers.Application.index()

# User Controller
GET         /users/reads              controllers.MemberController.getReads()
GET         /users/finished           controllers.MemberController.getFinishedReading()
GET         /users/current            controllers.MemberController.getCurrentlyReading()
GET         /users/addcurrent         controllers.MemberController.addCurrentBook()

# Reads Controller
GET         /reads/:id/comment        controllers.MemberController.setCurrentThoughts(id: Long)

# Books Controller
GET         /books                    controllers.BooksController.getBooks()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.at(path="/public", file)

# Security & Registration
POST        /api/register             controllers.SecurityController.registerUser()
